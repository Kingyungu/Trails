# ── Database ──────────────────────────────────────────────────────────────────
MONGODB_URI=mongodb+srv://<user>:<password>@cluster.mongodb.net/trails

# ── Auth ──────────────────────────────────────────────────────────────────────
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=replace_with_a_long_random_secret

# ── Server ────────────────────────────────────────────────────────────────────
PORT=5000
NODE_ENV=production

# ── CORS ──────────────────────────────────────────────────────────────────────
# Comma-separated list of allowed origins. Leave unset to allow all (dev only).
ALLOWED_ORIGINS=

# ── Email (for password reset) ────────────────────────────────────────────────
# Works with Gmail App Password, SendGrid, Resend, Mailgun, etc.
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=Trails App <noreply@trails.app>

# ── Sentry (optional) ─────────────────────────────────────────────────────────
SENTRY_DSN=
